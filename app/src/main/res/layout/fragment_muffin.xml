<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MuffinFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="650dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/purple_200"
        app:cardCornerRadius="60dp">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Muffin"
            android:textColor="#000"
            android:textSize="44dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/txtMuffin"
            android:layout_width="820px"
            android:layout_height="320dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:paddingHorizontal="@dimen/cardview_default_elevation"
            android:scaleType="centerCrop"
            android:src="@drawable/muffinn"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="270dp"
            android:src="@drawable/ic_baseline_favorite" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="600dp"
            android:src="@drawable/ic_baseline_share" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="600dp"
            android:src="@drawable/ic_baseline_star" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="160dp"
            android:layout_marginRight="10dp"
            android:text="Muffin é um bolinho muito simples e muito usado no lanche. O nome queque deriva da palavra cake, que significa bolo em inglês."
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

</FrameLayout>
